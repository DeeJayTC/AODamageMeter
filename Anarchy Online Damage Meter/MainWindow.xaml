<Window x:Class="Anarchy_Online_Damage_Meter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anarchy_Online_Damage_Meter"
        mc:Ignorable="d"
       
        Title="Anarchy Online Damage Meter" TextBlock.TextAlignment="Center" Width="500" Height="500">

    <!-- <ListView Name="listViewDamageMeter" Margin="-5,-5,-5,-5" > -->
    <ListView Name="listViewDamageMeter" ItemsSource="{Binding listViewCharacters}" Margin="-5,-5,-5,-5" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}   {1}">
                            <Binding Path="Name"/>
                            <Binding Path="DamageDone" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
    



</Window>
